FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 273;

boundaryField
{
    defaultFaces
    {
        type            zeroGradient;
    }

    cold
    {
        type            fixedValue;
        value           uniform 273;
    }

    front_back
    {
        type            empty;
    }

    hot
    {
        type            fixedValue;
        value           uniform 573;
    }
}

